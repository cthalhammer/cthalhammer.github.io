---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@/layouts/Base.astro";
import FormattedDate from "@/components/FormattedDate.astro";

export async function getStaticPaths() {
	const teaching = await getCollection("teaching");
	return teaching.map((course) => ({
		params: { slug: course.slug },
		props: { course },
	}));
}

interface Props {
	course: CollectionEntry<"teaching">;
}

const { course } = Astro.props;
const { Content } = await course.render();
---

<PageLayout meta={{ title: course.data.title, description: course.data.description || "" }}>
	<article>
		<header class="mb-8">
			<h1 class="title mb-4">{course.data.title}</h1>

			<div class="mb-4 flex flex-wrap gap-4 text-sm text-gray-600 dark:text-gray-400">
				<div class="flex items-center gap-2">
					<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-6m-8 0h2m8 0V9a2 2 0 00-2-2H9a2 2 0 00-2 2v12"
						></path>
					</svg>
					<span>{course.data.institution}</span>
				</div>
				<div class="flex items-center gap-2">
					<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
						></path>
					</svg>
					<span>{course.data.semester} {course.data.year}</span>
				</div>
				<div class="flex items-center gap-2">
					<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
					<span>{course.data.role}</span>
				</div>
			</div>

			{
				course.data.description && (
					<p class="mb-6 text-lg text-gray-700 dark:text-gray-300">{course.data.description}</p>
				)
			}

			{
				course.data.topics && course.data.topics.length > 0 && (
					<div class="mb-6">
						<h2 class="mb-3 text-base font-semibold">Topics Covered:</h2>
						<div class="flex flex-wrap gap-2">
							{course.data.topics.map((topic) => (
								<span class="rounded bg-green-100 px-3 py-1 text-sm text-green-800 dark:bg-green-900/30 dark:text-green-200">
									{topic}
								</span>
							))}
						</div>
					</div>
				)
			}

			{
				(course.data.polyboxLink ||
					(course.data.materials && course.data.materials.length > 0)) && (
					<div class="mb-8">
						<h2 class="mb-3 text-base font-semibold">Course Materials:</h2>
						<div class="flex flex-wrap gap-4">
							{course.data.polyboxLink && (
								<a
									href={course.data.polyboxLink}
									target="_blank"
									rel="noopener noreferrer"
									class="inline-flex items-center gap-2 rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600"
								>
									<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
										/>
									</svg>
									Polybox Folder
								</a>
							)}
							{course.data.materials &&
								course.data.materials.length > 0 &&
								course.data.materials.map((material) => (
									<a
										href={material.url}
										target="_blank"
										rel="noopener noreferrer"
										class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
									>
										<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
											/>
										</svg>
										{material.name}
									</a>
								))}
						</div>
					</div>
				)
			}
		</header>

		<div class="prose prose-cactus max-w-none">
			<Content />
		</div>

		<footer class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-700">
			<div class="flex items-center justify-between">
				<a
					href="/teaching/"
					class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
				>
					<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M15 19l-7-7 7-7"></path>
					</svg>
					Back to Teaching
				</a>
				<div class="text-sm text-gray-500 dark:text-gray-400">
					<FormattedDate date={course.data.publishDate} />
				</div>
			</div>
		</footer>
	</article>
</PageLayout>
