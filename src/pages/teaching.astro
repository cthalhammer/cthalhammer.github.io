---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";

const allTeaching = await getCollection("teaching");
const teachingByDate = allTeaching.sort((a, b) => {
	// Sort by semester/year (most recent first)
	if (a.data.semester !== b.data.semester) {
		return b.data.semester.localeCompare(a.data.semester);
	}
	return b.data.year - a.data.year;
});

// Group by academic year
const groupedTeaching = teachingByDate.reduce(
	(acc, course) => {
		const academicYear = `${course.data.year}`;
		if (!acc[academicYear]) {
			acc[academicYear] = [];
		}
		acc[academicYear].push(course);
		return acc;
	},
	{} as Record<string, typeof allTeaching>,
);
---

<PageLayout meta={{ title: "Teaching", description: "Courses and teaching materials" }}>
	<section>
		<h1 class="title mb-6">Teaching</h1>
		<p class="mb-8 text-gray-700 dark:text-gray-300">
			Here you can find information about courses I've taught, including some lecture materials.
		</p>
	</section>

	{
		Object.entries(groupedTeaching)
			.sort(([a], [b]) => parseInt(b) - parseInt(a))
			.map(([year, courses]) => (
				<section class="mb-12">
					<h2 class="title text-accent mb-6 text-xl">{year}</h2>
					<div class="space-y-6">
						{courses.map((course) => (
							<article class="border-l-4 border-green-200 bg-gray-50 p-4 dark:border-green-800 dark:bg-gray-900/50">
								<div class="mb-3 flex flex-col gap-2 sm:flex-row sm:items-start sm:justify-between">
									<div>
										<h3 class="mb-2 text-lg font-semibold">
											<a href={`/teaching/${course.slug}/`} class="cactus-link">
												{course.data.title}
											</a>
										</h3>
										<p class="text-sm text-gray-600 dark:text-gray-400">
											{course.data.institution}
										</p>
									</div>
									<div class="flex flex-col gap-1 text-sm text-gray-500 sm:text-right dark:text-gray-500">
										<span>
											{course.data.semester} {course.data.year}
										</span>
										<span>{course.data.role}</span>
									</div>
								</div>

								{course.data.description && (
									<p class="mb-3 text-gray-700 dark:text-gray-300">{course.data.description}</p>
								)}

								{course.data.topics && course.data.topics.length > 0 && (
									<div class="mb-3">
										<h4 class="mb-2 text-sm font-medium text-gray-900 dark:text-gray-100">
											Topics:
										</h4>
										<div class="flex flex-wrap gap-1">
											{course.data.topics.map((topic) => (
												<span class="rounded bg-green-100 px-2 py-1 text-xs text-green-800 dark:bg-green-900/30 dark:text-green-200">
													{topic}
												</span>
											))}
										</div>
									</div>
								)}

								{(course.data.polyboxLink || course.data.materials) && (
									<div class="mt-4 flex flex-wrap gap-3">
										{course.data.polyboxLink && (
											<a
												href={course.data.polyboxLink}
												target="_blank"
												rel="noopener noreferrer"
												class="inline-flex items-center gap-2 text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
											>
												<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
													<path
														stroke-linecap="round"
														stroke-linejoin="round"
														stroke-width="2"
														d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
													/>
												</svg>
												Course Materials (Polybox)
											</a>
										)}
										{course.data.materials &&
											course.data.materials.length > 0 &&
											course.data.materials.map((material) => (
												<a
													href={material.url}
													target="_blank"
													rel="noopener noreferrer"
													class="inline-flex items-center gap-2 text-sm text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
												>
													<svg
														class="h-4 w-4"
														fill="none"
														stroke="currentColor"
														viewBox="0 0 24 24"
													>
														<path
															stroke-linecap="round"
															stroke-linejoin="round"
															stroke-width="2"
															d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
														/>
													</svg>
													{material.name}
												</a>
											))}
									</div>
								)}
							</article>
						))}
					</div>
				</section>
			))
	}

	{
		allTeaching.length === 0 && (
			<section>
				<p class="text-gray-600 dark:text-gray-400">No teaching experience added yet.</p>
			</section>
		)
	}
</PageLayout>
